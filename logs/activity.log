<?php
// simpan sebagai fungsi di includes/logger.php
function logActivity($action, $userId = null)
{
    $file = __DIR__ . '/../logs/activity.log';
    $user = $userId ?? ($_SESSION['user']['username'] ?? 'guest');
    $time = date('Y-m-d H:i:s');
    $ip   = $_SERVER['REMOTE_ADDR'];
    $line = "[{$time}] {$user} {$action} IP:{$ip}" . PHP_EOL;
    file_put_contents($file, $line, FILE_APPEND | LOCK_EX);
}
